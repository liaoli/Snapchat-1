<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/friendLayout"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.nocomment.snapchat.FriendList">



    <FrameLayout
    android:id="@+id/themeFrame"
    android:layout_width="fill_parent"
    android:layout_height="50sp"
    android:background="@color/white">
        <TextView
            android:id="@+id/chatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:text="Chat with..."
            android:textColor="@color/azure"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/backToChatList"
            android:layout_width="32dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:src="@drawable/backtochat" />

    </FrameLayout>



    <TextView
        android:id="@+id/recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingLeft="5dp"
        android:text="@string/recent"
        android:textColor="#fff"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/chatFriendList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/themeFrame"></ListView>

</RelativeLayout>